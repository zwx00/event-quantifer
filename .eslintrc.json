{
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "settings": {
        "react": {
            "version": "16.3.1"
        }
    },
    "parserOptions": {
        "ecmaVersion": 9,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "camelcase": 1,
        "react/destructuring-assignment": ["warn", { "ignoreClassFields": true }],
        "react/prop-types": 0
    }
}
